@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Register | Komele Kaca</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully responsive admin theme which can be used to build CRM, CMS,ERP etc." name="description" />
    <meta content="Techzaa" name="author" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/velonic/assets/images/favicon.ico">

    <!-- Theme Config Js -->
    <script src="~/velonic/assets/js/config.js"></script>

    <!-- App css -->
    <link href="~/velonic/assets/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- Icons css -->
    <link href="~/velonic/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="authentication-bg position-relative">
    <div class="account-pages pt-2 pt-sm-5 pb-4 pb-sm-5 position-relative">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-8 col-lg-10">
                    <div class="card overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6 d-none d-lg-block p-2">
                                <img src="~/velonic/assets/images/auth-img.jpg" alt="" class="img-fluid rounded h-100">
                            </div>
                            <div class="col-lg-6">
                                <div class="d-flex flex-column h-100">
                                    <div class="auth-brand p-4">
                                        <a href="@Url.Action("Index", "Admin", new {})" class="logo-light">
                                            <img src="~/velonic/assets/images/logo.png" alt="logo" height="22">
                                        </a>
                                        <a href="@Url.Action("Index", "Admin", new {})" class="logo-dark">
                                            <img src="~/velonic/assets/images/logo-dark.png" alt="dark logo" height="22">
                                        </a>
                                    </div>
                                    <div class="p-4 my-auto">
                                        <h4 class="fs-20">Register</h4>
                                        <p class="text-muted mb-3">
                                            Enter your details to create your account.
                                        </p>

                                        <!-- form -->
                                        <form role="form" method="post" asp-controller="Admin" asp-action="Register" enctype="multipart/form-data">
                                            <div class="mb-3">
                                                <label for="userName" class="form-label">User Name</label>
                                                <input class="form-control" name="UserName" type="text" id="username" required=""
                                                       placeholder="Enter your username">
                                            </div>
                                            <div class="mb-3">
                                                <label for="email" class="form-label">Email</label>
                                                <input class="form-control" name="Email" type="email" id="email" required=""
                                                       placeholder="Enter your email">
                                            </div>
                                            <div class="mb-3">
                                                <label for="password" class="form-label">Password</label>
                                                <input class="form-control" name="Password" type="password" required="" id="password"
                                                       placeholder="Enter your password">
                                            </div>
                                            <div class="mb-3">
                                                <label for="confirmPassword" class="form-label">Confirm Password</label>
                                                <input class="form-control" name="ConfirmPassword" type="password" required="" id="confirmPassword"
                                                       placeholder="Confirm your password">
                                            </div>
                                            <div class="mb-0 text-start">
                                                <button class="btn btn-soft-primary w-100" type="submit">
                                                    <i class="ri-login-circle-fill me-1"></i> <span class="fw-bold">
                                                        Register
                                                    </span>
                                                </button>
                                            </div>

                                            <div class="text-center mt-4">
                                                <p class="text-muted fs-16">Or register with</p>
                                                <div class="d-flex gap-2 justify-content-center mt-3">
                                                    <a href="javascript: void(0);" class="btn btn-soft-primary">
                                                        <i class="ri-facebook-circle-fill"></i>
                                                    </a>
                                                    <a href="javascript: void(0);" class="btn btn-soft-danger">
                                                        <i class="ri-google-fill"></i>
                                                    </a>
                                                    <a href="javascript: void(0);" class="btn btn-soft-info">
                                                        <i class="ri-twitter-fill"></i>
                                                    </a>
                                                    <a href="javascript: void(0);" class="btn btn-soft-dark">
                                                        <i class="ri-github-fill"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </form>
                                        <!-- end form-->
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div>
                    </div>
                </div>
                <!-- end row -->
            </div>
        </div><!-- end container -->
    </div><!-- end page -->

    <footer class="footer footer-alt fw-medium">
        <span class="text-dark">
            <script>document.write(new Date().getFullYear())</script> © Komele Kaca
        </span>
    </footer>
    <!-- Vendor js -->
    <script src="~/velonic/assets/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/velonic/assets/js/app.min.js"></script>

</body>

</html>
