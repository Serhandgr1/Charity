@model IEnumerable<MemberShipDto>

<div class="container-fluid">
    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Blogs</a></li>
                        <li class="breadcrumb-item active">Show MemberShip</li>
                    </ol>
                </div>
                <h4 class="page-title">Show MemberShip</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Show MemberShip</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Surname</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>IsMember</th>
                                    <th style="text-align: right;">Update / Delete / Images</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Surname</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>
                                            <div class="form-check form-switch">
                                                <input type="checkbox" class="form-check-input" checked="@item.IsMember" disabled>
                                            </div>
                                        </td>
                                        <td style="text-align: right;">
                                            <div style="display: inline-block;">
                                                <form method="get" action="/MemberShip/Update">
                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">
                                                        <i class="ri-settings-3-line"></i>
                                                    </button>
                                                </form>
                                            </div>
                                            <div style="display: inline-block;">
                                                <form>
                                                    <input type="hidden" name="Id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">
                                                        <i>@Html.ActionLink("", "Delete", new { id = item.Id }, new { @class = "ri-delete-bin-2-line", onclick = "return confirm('Are you sure you want to delete?')" })</i>
                                                    </button>
                                                </form>
                                            </div> <input value="@ViewBag.Message" id="bag" style="display:none;" />
                                            <div style="display: inline-block;">
                                                <form method="get" action="/MemberShip/Show">
                                                    <input type="hidden" name="BlogId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">
                                                        <i class="ri-image-line"></i>
                                                    </button>
                                                </form>
                                            </div>


                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- end table-responsive-->
                </div> <!-- end card body-->
            </div> <!-- end card -->
        </div><!-- end col-->
    </div><!-- end row-->
</div> <!-- container -->