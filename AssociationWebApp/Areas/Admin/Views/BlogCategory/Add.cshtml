@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<!-- Start Content-->
<div class="container-fluid">

    <!-- end page title -->
    <div class="row">

        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Add Blog Category</h4>

                </div>
                <div class="card-body">
                    <form action="/BlogCategory/Add" method="post" enctype="multipart/form-data">
                        <ul class="nav nav-pills bg-nav-pills nav-justified mb-3" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a href="#english" data-bs-toggle="tab" aria-expanded="true" class="nav-link rounded-0 active" aria-selected="true" role="tab">
                                    English
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#kurdish" data-bs-toggle="tab" aria-expanded="false" class="nav-link rounded-0 " aria-selected="false" role="tab" tabindex="-1">
                                    Kurdish
                                </a>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a href="#turkish" data-bs-toggle="tab" aria-expanded="false" class="nav-link rounded-0 " aria-selected="false" role="tab" tabindex="-1">
                                    Turkish
                                </a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div class="tab-pane active show" id="english" role="tabpanel">
                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Title(En)</label>
                                    <input type="text" name="Title" class="form-control">
                                </div>

                            </div>
                            <div class="tab-pane" id="kurdish" role="tabpanel">

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Title(Kr)</label>
                                    <input type="text" name="TitleKr" class="form-control">
                                </div>

                            </div>
                            <div class="tab-pane" id="turkish" role="tabpanel">

                                <div class="mb-3">
                                    <label for="simpleinput" class="form-label">Title(Tr)</label>
                                    <input type="text" name="TitleTr" class="form-control">
                                </div>

                            </div>
                            <div style="text-align: right;">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div>
</div><!-- end row -->
</div> <!-- container -->
