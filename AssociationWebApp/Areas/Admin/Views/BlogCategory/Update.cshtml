@using Microsoft.AspNetCore.Mvc.Localization

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
@inject IViewLocalizer Localizer
@using AssociationWebApp.Extension
@model BlogCategoryDto
<!-- Start Content-->
<div class="container-fluid">

    <!-- end page title -->
    <div class="row">

        <div class="col-xl-6">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Update Blog Category</h4>

                </div>
                <div class="card-body">
                    <form action="/BlogCategory/Update" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="simpleinput" class="form-label">Name(En)</label>
                            <input type="text" name="Title" value="@Model.Title" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="simpleinput" class="form-label">Name(Tr)</label>
                            <input type="text" name="TitleKr" value="@LocalizationExtension.GetLocalization(Model.Title, "tr-TR")" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="simpleinput" class="form-label">Name(Kr)</label>
                            <input type="text" name="TitleTr" value="@LocalizationExtension.GetLocalization(Model.Title, "kr-KR")" class="form-control">
                        </div>


                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div style="text-align: right;">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>

                    </form>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card-->
    </div>
</div><!-- end row -->
</div> <!-- container -->
