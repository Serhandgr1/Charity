@inject IViewLocalizer localizer
<aside class="widget widget_categories">
    <h2 class="widget-title">@localizer["Caused Categories"]</h2>

    <ul>
        @foreach (var category in Model)
        {
            <li>
                <a href="#">@localizer[@category.Title]</a>
            </li>
        }
    </ul>
</aside>
