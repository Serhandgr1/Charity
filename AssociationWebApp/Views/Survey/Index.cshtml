@model IEnumerable<SurveyDto>
@inject IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@localizer["Questions"]</title>
    <link rel="stylesheet" href="path/to/your/styles.css"> <!-- CSS dosyanızın yolunu ekleyin -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> <!-- Bootstrap CSS -->
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script> <!-- Font Awesome kit -->
    <script type="text/javascript">
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
                m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', '__gaTracker');

        __gaTracker('create', 'UA-348094-43', 'auto', { 'allowLinker': true });
        __gaTracker('set', 'forceSSL', true);
        __gaTracker('require', 'linker');
        __gaTracker('linker:autoLink', ['wplook.com']);
        __gaTracker('send', 'pageview');
    </script>
</head>
<body>
    <div class="wrapper">
        <div class="main">
            <div class="main-head">
                <div class="main-head-image fullscreener">
                    <img src="assets/images/temp/main-image-1.jpg" height="209" width="1800" alt="@localizer["Main Head Image"]">
                </div><!-- /.main-head-image fullscreener -->

                <div class="main-head-content">
                    <div class="grid-container">
                        <div class="grid-x grid-margin-x">
                            <div class="cell small-12">
                                <h1 class="main-title">@localizer["Questions"]</h1><!-- /.main-title -->

                                <ul class="breadcrumbs">
                                    <li><a href="#">@localizer["Home"]</a></li>
                                    <li class="current">@localizer["Questions"]</li><!-- /.current -->
                                </ul><!-- /.breadcrumbs -->
                            </div><!-- /.cell small-12 -->
                        </div>
                    </div><!-- /.grid -->
                </div><!-- /.main-head-content -->
            </div><!-- /.main-head -->

            <div class="main-body">
                <div class="container mt-5">
                    <div class="row">
                        @foreach (var question in Model)
                        {
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">@localizer[@question.Name]</h5>
                                        <a href="@Url.Action("Answer", "Survey", new { questionId = question.Id })" class="button">@localizer["Answer"]</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div><!-- /.main-body -->
        </div><!-- /.main -->
    </div><!-- /.wrapper -->

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> <!-- jQuery -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> <!-- Bootstrap JS -->
</body>
</html>
