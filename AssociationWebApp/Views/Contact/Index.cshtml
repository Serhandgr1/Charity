@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<body>
	<script type="text/javascript">
		(function (i, s, o, g, r, a, m) {
			i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
				(i[r].q = i[r].q || []).push(arguments)
			}, i[r].l = 1 * new Date(); a = s.createElement(o),
				m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
		})(window, document, 'script', '//www.google-analytics.com/analytics.js', '__gaTracker');

		__gaTracker('create', 'UA-348094-43', 'auto', { 'allowLinker': true });
		__gaTracker('set', 'forceSSL', true);
		__gaTracker('require', 'linker');
		__gaTracker('linker:autoLink', ['wplook.com']);
		__gaTracker('send', 'pageview');
	</script>

	<div class="wrapper">
		<div class="main">
			<div class="main-head">
				<div class="main-head-image fullscreener">
					<img src="assets/images/temp/main-image-1.jpg" height="209" width="1800" alt="@Localizer["Main Image Alt Text"]">
				</div><!-- /.main-head-image fullscreener -->

				<div class="main-head-content">
					<div class="grid-container">
						<div class="grid-x grid-margin-x">
							<div class="cell small-12">
								<h1 class="main-title">@Localizer["Contact Us"]</h1><!-- /.main-title -->

								<ul class="breadcrumbs">
									<li>
										<a href="#">@Localizer["Home"]</a>
									</li>

									<li class="current">
										<a href="#">@Localizer["Contact Us"]</a>
									</li><!-- /.current -->
								</ul><!-- /.breadcrumbs -->
							</div><!-- /.cell small-12 -->
						</div>
					</div><!-- /.grid -->
				</div><!-- /.main-head-content -->
			</div><!-- /.main-head -->

			<div class="main-body">
				<div class="grid-container">
					<div class="grid-x grid-margin-x">
						<div class="cell small-12 large-8">
							<div class="content">
								<article class="post post-single format-gallery" itemscope itemtype="https://schema.org/BlogPosting">

									<div class="post-body">
										<div class="entry" itemprop="articleBody">

											<div class="post-image">
												<ul class="owl-carousel">
													<li>
														<a href="#">
															<img src="assets/images/temp/post-image-2.jpg" height="357" width="770" alt="@Localizer["Post Image 2 Alt"]">
														</a>
													</li>

													<li>
														<a href="#">
															<img src="assets/images/temp/post-image-1.jpg" height="357" width="770" alt="@Localizer["Post Image 1 Alt"]">
														</a>
													</li>
												</ul>
											</div><br /><!-- /.post-image -->

											<div class="grid-x grid-margin-x">
												<div class="cell small-12 medium-6">
													<h3>@Localizer["Montreal"]</h3>

													<p>
														@Localizer["Montreal Address Line 1"] <br>
														@Localizer["Montreal Address Line 2"]
													</p>

													<p>
														@Localizer["Office"] &mdash; @Localizer["Montreal Phone"] <br>
														@Localizer["Fax"] &mdash; @Localizer["Montreal Fax"]
													</p>

													<p>
														@Localizer["Email"]: <a href="mailto:@Localizer["Montreal Email"]">@Localizer["Montreal Email"]</a><br>
														@Localizer["Web"]: <a href="#">@Localizer["Montreal Website"]</a>
													</p>
												</div><!-- /.cell small-12 medium-6 -->

												<div class="cell small-12 medium-6">
													<h3>@Localizer["New York"]</h3>

													<p>
														@Localizer["New York Address Line 1"] <br>
														@Localizer["New York Address Line 2"]
													</p>

													<p>
														@Localizer["Office"] &mdash; @Localizer["New York Phone"]<br>
														@Localizer["Fax"] &mdash; @Localizer["New York Fax"]
													</p>

													<p>
														@Localizer["Email"]: <a href="mailto:@Localizer["New York Email"]">@Localizer["New York Email"]</a><br>
														@Localizer["Web"]: <a href="#">@Localizer["New York Website"]</a>
													</p>
												</div><!-- /.cell small-12 medium-6 -->
											</div><!-- /.grid -->

										</div><!-- /.entry -->
									</div><!-- /.post-body -->

								</article><!-- /.post post-single -->
							</div><!-- /.content -->
						</div><!-- /.cell small-12 large-8 -->

						<div class="cell small-12 large-3 large-offset-1">
							<div class="sidebar">
								<aside class="widget widget_text">
									@await Component.InvokeAsync("ContactUs")
								</aside><!-- /.widget widget_text -->

								<aside class="widget widget_upcoming_events">
									<h2 class="widget-title">@Localizer["Upcoming Events"]</h2>

									<div class="slider-widget">
										<div class="slider-clip">
											<ul class="slides owl-carousel">
												<li class="slide">
													<div class="event-small">
														@await Component.InvokeAsync("Events")
													</div><!-- /.event-small -->
												</li><!-- /.slide -->
											</ul><!-- /.slides -->
										</div><!-- /.slider-clip -->
									</div><!-- /.slider-widget -->
								</aside>
							</div>
						</div><!-- /.cell small-12 large-3 -->
					</div>
				</div><!-- /.grid -->
			</div><!-- /.main-body -->
		</div><!-- /.main -->
	</div><!-- /.wrapper -->
</body>
</html>
